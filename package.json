{
  "name": "sample-rest-api",
  "version": "1.0.0",
  "description": "Make crud rest api with express and typescript",
  "main": "./dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,ts}'",
    "lint:conflict": "eslint-config-prettier 'src/**/*.{js,ts}'",
    "prepare": "simple-git-hooks > /dev/null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitamuraDev/express-typescript-starterkit.git"
  },
  "keywords": [],
  "author": "Masato Kitamura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kitamuraDev/express-typescript-starterkit/issues"
  },
  "homepage": "https://github.com/kitamuraDev/express-typescript-starterkit#readme",
  "dependencies": {
    "body-parser": "^1.19.2",
    "express": "^4.17.2",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/eslint": "^8.4.1",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.18",
    "@types/prettier": "^2.4.4",
    "@types/rimraf": "^3.0.2",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ]
  }
}
